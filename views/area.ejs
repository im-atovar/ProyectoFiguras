<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculadora de Figuras Geométricas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <main>
        <h1>Calculadora de Figuras Geométricas</h1>
        
        <div class="action-buttons">
            <button id="btn-limpiar" class="btn-limpiar" onclick="limpiarFormulario()">Limpiar Formulario</button>
        </div>
        
        <div class="cards-container">
            <!-- Rectángulo Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Rectángulo</h2>
                    <div class="card-image">
                        <img src="/img/rectangle.png" alt="Rectángulo">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="base-rectangulo">Base:</label>
                        <input type="number" id="base-rectangulo" required>
                    </div>
                    <div class="input-group">
                        <label for="altura-rectangulo">Altura:</label>
                        <input type="number" id="altura-rectangulo" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('rectangulo', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('rectangulo', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-rectangulo"></div>
            </div>

            <!-- Triángulo Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Triángulo</h2>
                    <div class="card-image">
                        <img src="/img/triangle.png" alt="Triangulo">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="base-triangulo">Base:</label>
                        <input type="number" id="base-triangulo" required>
                    </div>
                    <div class="input-group">
                        <label for="altura-triangulo">Altura:</label>
                        <input type="number" id="altura-triangulo" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('triangulo', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('triangulo', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-triangulo"></div>
            </div>

            <!-- Círculo Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Círculo</h2>
                    <div class="card-image">
                        <img src="/img/circle.png" alt="Círculo">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="radio-circulo">Radio:</label>
                        <input type="number" id="radio-circulo" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('circulo', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('circulo', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-circulo"></div>
            </div>

            <!-- Cuadrado Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Cuadrado</h2>
                    <div class="card-image">
                        <img src="/img/square.png" alt="Cuadrado">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="lado-cuadrado">Lado:</label>
                        <input type="number" id="lado-cuadrado" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('cuadrado', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('cuadrado', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-cuadrado"></div>
            </div>

            <!-- Trapecio Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Trapecio</h2>
                    <div class="card-image">
                        <img src="/img/trapezoid.png" alt="Trapecio">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="base-mayor-trapecio">Base Mayor:</label>
                        <input type="number" id="base-mayor-trapecio" required>
                    </div>
                    <div class="input-group">
                        <label for="base-menor-trapecio">Base Menor:</label>
                        <input type="number" id="base-menor-trapecio" required>
                    </div>
                    <div class="input-group">
                        <label for="altura-trapecio">Altura:</label>
                        <input type="number" id="altura-trapecio" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('trapecio', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('trapecio', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-trapecio"></div>
            </div>

            <!-- Rombo Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Rombo</h2>
                    <div class="card-image">
                        <img src="/img/rhombus.png" alt="Rombo">
                    </div>
                </div>
                <div class="card-body">
                    <div class="input-group">
                        <label for="diagonal-mayor-rombo">Diagonal Mayor:</label>
                        <input type="number" id="diagonal-mayor-rombo" required>
                    </div>
                    <div class="input-group">
                        <label for="diagonal-menor-rombo">Diagonal Menor:</label>
                        <input type="number" id="diagonal-menor-rombo" required>
                    </div>
                    <div class="card-actions">
                        <button type="button" onclick="calcular('rombo', 'area')">Calcular Área</button>
                        <button type="button" onclick="calcular('rombo', 'perimetro')">Calcular Perímetro</button>
                    </div>
                </div>
                <div class="card-result" id="result-rombo"></div>
            </div>
        </div>

        <script src="/js/script.js"></script>
    </main>
</body>
</html>